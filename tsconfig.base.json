{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@agape/cli": ["libs/agape/cli/src/index.ts"],
      "@agape/demo": ["libs/agape/demo/src/index.ts"],
      "@agape/forms": ["libs/agape/forms/src/index.ts"],
      "@agape/menu": ["libs/agape/menu/src/index.ts"],
      "@agape/terminal": ["libs/agape/terminal/src/index.ts"],
      "@lib/express": ["libs/lib-express/src/index.ts"],
      "@lib/menu": ["libs/lib-menu/src/index.ts"],
      "@lib/server": ["libs/lib-server/src/index.ts"],
      "@zed/api": ["libs/lib-api/src/index.ts"]
    },
    "outDir": "dist",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "tmp"]
}
